<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:adjustViewBounds="true"
    android:cropToPadding="true">

    <SurfaceView
        android:focusable="false"
        android:background="@color/transparent"
        android:layout_width="0px"
        android:layout_height="0px"
        android:id="@+id/surfaceView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/red"

        >
        <ImageButton
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/leftv2"
            android:scaleType="fitCenter"
            android:padding="2dp"
            android:background="@color/red"
            android:layout_alignParentLeft="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/backToHistoryImageButton"
            android:layout_alignParentBottom="true"
            />

        <TextView
            android:textStyle="italic"
            android:fontFamily=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Workout History"
            android:textSize="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:textColor="@color/white"
            android:id="@+id/historyTextView"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/backToHistoryImageButton"
             />


        <ImageButton
            android:padding="2dp"
            android:background="@color/red"
            android:src="@drawable/right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/historyBackButton"
            android:scaleType="fitCenter"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>




    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:textColor="#000000"
            android:text="You have no workout history."
            android:id="@+id/workoutHistoryMessage" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/historyListView" />

    </RelativeLayout>


</LinearLayout>