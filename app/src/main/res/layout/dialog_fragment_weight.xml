<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="16dp"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="com.example.kareemdarkazanli.flexlog.DialogFragmentNewWeight">


    <TextView
        android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textSize="16dp"
                android:id="@+id/textView"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                />

            <Button
                android:layout_marginTop="10dp"

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:text="lb"
                android:textSize="12dp"
                android:id="@+id/weightButton"
                android:background="@drawable/round_gray_button"
                android:layout_toRightOf="@id/textView"
                />

            <ImageButton

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/speechbubblegray"
                android:scaleType="fitCenter"
                android:id="@+id/addCommentButton"
                android:background="@color/transparent"
                android:layout_alignTop="@+id/weightButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_marginTop="15dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_white_button"
        android:src="@drawable/inc2"
        android:scaleType="fitCenter"
        android:padding="10dp"
        android:id="@+id/addWeightButton"
        android:layout_below="@id/weightButton"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"/>

    <ImageButton
        android:background="@drawable/round_white_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/dec2"
        android:scaleType="fitCenter"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:id="@+id/subWeightButton"
        android:layout_below="@id/weightButton"
        android:layout_alignBottom="@id/addWeightButton"
        android:layout_alignLeft="@+id/subRepsButton"
        android:layout_alignStart="@+id/subRepsButton" />



    <EditText
        android:singleLine="true"
        android:selectAllOnFocus="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:textSize="40dp"
        android:hint="0.0"
        android:id="@+id/weightEditText"
        android:layout_toLeftOf="@id/addWeightButton"
        android:layout_toRightOf="@id/subWeightButton"
        android:layout_alignBottom="@id/addWeightButton"
        android:gravity="center_horizontal"
        android:layout_below="@+id/weightButton"
        android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reps"
            android:textSize="16dp"
            android:id="@+id/textView2"
            android:layout_below="@+id/weightEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"/>


    <EditText
        android:capitalize="words"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/noteEditText"
        android:hint="Add a note"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/repsEditText"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_marginTop="15dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_white_button"
        android:src="@drawable/inc2"
        android:scaleType="fitCenter"
        android:id="@+id/addRepsButton"
        android:padding="10dp"
        android:layout_below="@id/textView2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        />

    <EditText
        android:singleLine="true"
        android:selectAllOnFocus="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="40dp"
        android:hint="0"
        android:id="@+id/repsEditText"
        android:gravity="center_horizontal"
        android:layout_toLeftOf="@id/addRepsButton"
        android:layout_toRightOf="@id/subRepsButton"
        android:layout_alignBottom="@id/addRepsButton"
        android:layout_below="@id/textView2"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_marginTop="15dp"

        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_white_button"
        android:src="@drawable/dec2"
        android:scaleType="fitCenter"
        android:padding="10dp"
        android:id="@+id/subRepsButton"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/textView2"
        android:layout_marginLeft="25dp"
        android:layout_alignBottom="@id/addRepsButton"/>

</RelativeLayout>
